@page "{featureName}"
@model FeatureDetailModel
@{
    ViewData["Title"] = Model.FeatureName;
}

<section class="is-title-bar">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <ul>
      <li><a href="/Features">Features</a></li>
      <li>@Model.FeatureName</li>
    </ul>
    <a href="https://github.com/justboil/admin-one-tailwind" target="_blank" class="button blue">
      <span class="icon"><i class="mdi mdi-github-circle"></i></span>
      <span>GitHub</span>
    </a>
  </div>
</section>

<section class="is-hero-bar">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <h1 class="title">
      @Model.FeatureName Management
    </h1>
    <div class="buttons">
      <button class="button light">Settings</button>
      <button class="button green">Save Changes</button>
    </div>
  </div>
</section>

<section class="section main-section">
  <!-- Feature Status Card -->
  <div class="card mb-6">
    <header class="card-header">
      <p class="card-header-title">
        <span class="icon"><i class="@Model.FeatureIcon"></i></span>
        Feature Status
      </p>
    </header>
    <div class="card-content">
      <div class="grid gap-6 grid-cols-1 md:grid-cols-3">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold">Status</h3>
            <span class="tag @Model.StatusColor">@Model.Status</span>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold">Category</h3>
            <p class="text-gray-600">@Model.Category</p>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold">Last Updated</h3>
            <p class="text-gray-600">@Model.LastUpdated</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Feature Configuration -->
  <div class="card mb-6">
    <header class="card-header">
      <p class="card-header-title">
        <span class="icon"><i class="mdi mdi-cog"></i></span>
        Configuration
      </p>
    </header>
    <div class="card-content">
      <form method="post">
        <div class="field">
          <label class="label">Feature Name</label>
          <div class="control">
            <input class="input" type="text" value="@Model.FeatureName" readonly>
          </div>
        </div>

        <div class="field">
          <label class="label">Description</label>
          <div class="control">
            <textarea class="textarea" placeholder="Feature description">@Model.Description</textarea>
          </div>
        </div>

        <div class="field">
          <label class="label">Status</label>
          <div class="control">
            <div class="select">
              <select name="status">
                <option value="Active" selected="@(Model.Status == "Active")">Active</option>
                <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                <option value="Disabled" selected="@(Model.Status == "Disabled")">Disabled</option>
              </select>
            </div>
          </div>
        </div>

        <div class="field">
          <label class="label">Category</label>
          <div class="control">
            <div class="select">
              <select name="category">
                <option value="Security" selected="@(Model.Category == "Security")">Security</option>
                <option value="Development" selected="@(Model.Category == "Development")">Development</option>
                <option value="Data" selected="@(Model.Category == "Data")">Data</option>
                <option value="Administration" selected="@(Model.Category == "Administration")">Administration</option>
                <option value="Reporting" selected="@(Model.Category == "Reporting")">Reporting</option>
                <option value="System" selected="@(Model.Category == "System")">System</option>
                <option value="Communication" selected="@(Model.Category == "Communication")">Communication</option>
              </select>
            </div>
          </div>
        </div>

        <div class="field">
          <label class="label">Enable Feature</label>
          <div class="control">
            <label class="checkbox">
              <input type="checkbox" @(Model.Status == "Active" ? "checked" : "")>
              Enable this feature
            </label>
          </div>
        </div>

        <div class="field grouped">
          <div class="control">
            <button type="submit" class="button green">
              Save Changes
            </button>
          </div>
          <div class="control">
            <a href="/Features" class="button light">
              Back to Features
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- Feature Statistics -->
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        <span class="icon"><i class="mdi mdi-chart-bar"></i></span>
        Usage Statistics
      </p>
    </header>
    <div class="card-content">
      <div class="grid gap-6 grid-cols-1 md:grid-cols-4">
        <div class="text-center">
          <h3 class="text-2xl font-bold text-blue-600">@Model.UsageCount</h3>
          <p class="text-gray-600">Total Usage</p>
        </div>
        <div class="text-center">
          <h3 class="text-2xl font-bold text-green-600">@Model.SuccessRate%</h3>
          <p class="text-gray-600">Success Rate</p>
        </div>
        <div class="text-center">
          <h3 class="text-2xl font-bold text-orange-600">@Model.ErrorCount</h3>
          <p class="text-gray-600">Errors</p>
        </div>
        <div class="text-center">
          <h3 class="text-2xl font-bold text-purple-600">@Model.LastUsed</h3>
          <p class="text-gray-600">Last Used</p>
        </div>
      </div>
    </div>
  </div>
</section> 