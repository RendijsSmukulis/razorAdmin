@model RazorAdmin.ViewModels.FeatureDetailViewModel

@{
    ViewData["Title"] = Model.Feature.Name;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@Model.Feature.Name</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Features")">Features</a></li>
                    <li class="breadcrumb-item active">@Model.Feature.Name</li>
                </ul>
            </div>
            <div class="col-auto float-end ms-auto">
                <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#edit_feature">
                    <i class="fa fa-pencil"></i> Edit Feature
                </a>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Feature Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Feature Name</label>
                                <input type="text" class="form-control" value="@Model.Feature.Name" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Category</label>
                                <input type="text" class="form-control" value="@Model.Feature.Category" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="3" readonly>@Model.Feature.Description</textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Status</label>
                                @{
                                    var statusColor = Model.Feature.Status switch
                                    {
                                        "Active" => "success",
                                        "Pending" => "warning",
                                        "Disabled" => "danger",
                                        _ => "secondary"
                                    };
                                }
                                <span class="badge bg-@statusColor fs-6">@Model.Feature.Status</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Updated</label>
                                <input type="text" class="form-control" value="@Model.Feature.LastUpdated.ToString("MMM dd, yyyy HH:mm")" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Usage Statistics</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="stats-info">
                                <h6>Total Usage</h6>
                                <h4>@Model.Feature.UsageCount.ToString("N0")</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stats-info">
                                <h6>Success Rate</h6>
                                <h4>@Model.Feature.SuccessRate%</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stats-info">
                                <h6>Error Count</h6>
                                <h4>@Model.Feature.ErrorCount.ToString("N0")</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Success Rate Progress</label>
                                <div class="progress">
                                    <div class="progress-bar bg-success" style="width: @Model.Feature.SuccessRate%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Feature Icon</h4>
                </div>
                <div class="card-body text-center">
                    <div class="feature-icon-large">
                        <span class="@Model.Feature.Icon" style="font-size: 4rem;"></span>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Last Activity</h4>
                </div>
                <div class="card-body">
                    @if (Model.Feature.LastUsed.HasValue)
                    {
                        <div class="activity-item">
                            <div class="activity-content">
                                <h6>Last Used</h6>
                                <p>@Model.Feature.LastUsed.Value.ToString("MMM dd, yyyy HH:mm")</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="activity-item">
                            <div class="activity-content">
                                <h6>No Recent Activity</h6>
                                <p>This feature hasn't been used yet.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Related Features</h4>
                </div>
                <div class="card-body">
                    <div class="related-features">
                        @foreach (var relatedFeature in Model.RelatedFeatures.Take(5))
                        {
                            if (relatedFeature.Name != Model.Feature.Name)
                            {
                                <div class="related-feature-item">
                                    <a href="@Url.Action("Detail", "Features", new { featureName = relatedFeature.Name })" class="d-flex align-items-center">
                                        <span class="@relatedFeature.Icon"></span>
                                        <div class="ms-3">
                                            <h6 class="mb-0">@relatedFeature.Name</h6>
                                            <small class="text-muted">@relatedFeature.Category</small>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 