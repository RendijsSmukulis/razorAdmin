@model IEnumerable<RazorAdmin.Models.Feature>

@{
    ViewData["Title"] = "Features";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Features</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Features</li>
                </ul>
            </div>
            <div class="col-auto float-end ms-auto">
                <a href="#" class="btn add-btn" data-bs-toggle="modal" data-bs-target="#add_feature">
                    <i class="fa fa-plus"></i> Add Feature
                </a>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-nowrap custom-table mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>Feature</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Usage Count</th>
                                    <th>Success Rate</th>
                                    <th>Last Updated</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var feature in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Detail", "Features", new { featureName = feature.Name })" class="d-flex align-items-center">
                                                <span class="@feature.Icon"></span>
                                                <div class="ms-3">
                                                    <h6 class="mb-0">@feature.Name</h6>
                                                    <small class="text-muted">@feature.Description</small>
                                                </div>
                                            </a>
                                        </td>
                                        <td>@feature.Category</td>
                                        <td>
                                            @{
                                                var statusColor = feature.Status switch
                                                {
                                                    "Active" => "success",
                                                    "Pending" => "warning",
                                                    "Disabled" => "danger",
                                                    _ => "secondary"
                                                };
                                            }
                                            <span class="badge bg-@statusColor">@feature.Status</span>
                                        </td>
                                        <td>@feature.UsageCount.ToString("N0")</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="me-2">@feature.SuccessRate%</span>
                                                <div class="progress flex-1" style="height: 6px;">
                                                    <div class="progress-bar bg-success" style="width: @feature.SuccessRate%"></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@feature.LastUpdated.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="material-icons">more_vert</i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a class="dropdown-item" href="@Url.Action("Detail", "Features", new { featureName = feature.Name })">
                                                        <i class="fa fa-eye m-r-5"></i> View
                                                    </a>
                                                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#edit_feature">
                                                        <i class="fa fa-pencil m-r-5"></i> Edit
                                                    </a>
                                                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#delete_feature">
                                                        <i class="fa fa-trash-o m-r-5"></i> Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 